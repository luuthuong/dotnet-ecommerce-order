{
  "ConnectionStrings": {
    "EventStore": "Server=localhost,1433;Database=ECommerceEventStore;User Id=sa;Password=YourStr0ngP@ssw0rd;TrustServerCertificate=True;",
    "QueryStore": "Server=localhost,1433;Database=ECommerceQueryStore;User Id=sa;Password=YourStr0ngP@ssw0rd;TrustServerCertificate=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "AllowedHosts": "*",
  "ApiSettings": {
    "Versioning": {
      "DefaultApiVersion": "1.0",
      "AssumeDefaultVersionWhenUnspecified": true,
      "ReportApiVersions": true
    },
    "Swagger": {
      "Title": "E-Commerce Event Sourcing API",
      "Description": "API for E-Commerce system using Event Sourcing and CQRS",
      "Contact": {
        "Name": "API Support",
        "Email": "support@ecommerce-eventsourcing.com"
      },
      "License": {
        "Name": "MIT",
        "Url": "https://opensource.org/licenses/MIT"
      }
    },
    "Cors": {
      "AllowedOrigins": ["*"],
      "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "AllowedHeaders": ["*"]
    }
  },
  "EventSourcing": {
    "EnableSnapshotting": false,
    "SnapshotFrequency": 100,
    "ConcurrencyRetries": 5
  },
  "FeatureFlags": {
    "EnableEventStoreProjections": true,
    "EnableDetailedLogging": true,
    "EnableMetrics": true
  },
  "Caching": {
    "Enabled": true,
    "AbsoluteExpirationInMinutes": 30,
    "SlidingExpirationInMinutes": 10
  },
  "RateLimiting": {
    "Enabled": true,
    "PerSecondLimit": 10,
    "PerMinuteLimit": 100,
    "PerHourLimit": 1000
  }
}